<!doctype html>
<html lang="en">
	
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%- name -%>'(s) Personal Stickies</title>
	<link rel="stylesheet" href="/style.css">
</head>
	
<body>
	<div id="user_info"><a href="//scratch.mit.edu/users/<%- name -%>"><img src="//cdn2.scratch.mit.edu/get_image/user/<%- user.user.id -%>_<%- size -%>x<%- size -%>.png"><%- name -%></a></div><div id="user_pins">
	<% for (let s of user.stickies) { %>
		<div class="sticky">
    	<img src="/sticky.png"> Sticky:
    	<a href="//scratch.mit.edu/discuss/topic/<%- s.topic_ID -%>"><%- s.topic_NAME -%></a>
    	by <%- s.topic_OWNER -%>
    	<a href="//scratch.mit.edu/discuss/topic/<%- s.topic_ID -%>/unread/">(New Posts)</a>
		</div>
	<% } %>
	<% if (user.stickies.length === 0) { %>
		<h1>This User Doesn't Have Any Stickies</h1>
	<% } %>
</body>

</html>